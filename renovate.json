{
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled",
    "https://github.com/arkedge/renovate-config/raw/main/rust-toolchain.json5"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/init.sh/"
      ],
      "matchStrings": [
        "depName=(?<depName>.*?)?\\s.*?_VERSION=\"(?<currentValue>.*?)\""
      ],
      "versioningTemplate": "loose",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile/",
        "/ci.yml/"
      ],
      "matchStrings": [
        "depName=(?<depName>.*?)?\\s.*?_VERSION=\"(?<currentValue>.*?)\""
      ],
      "versioningTemplate": "loose",
      "datasourceTemplate": "repology"
    }
  ]
}
